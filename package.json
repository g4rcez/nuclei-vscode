{
  "name": "nuclei-vscode",
  "displayName": "Nuclei Vscode",
  "description": "Syntax highlighting, IntelliSense, and more for Nuclei templates YAML",
  "version": "0.0.1",
  "publisher": "g4rcez",
  "repository": {
    "type": "git",
    "url": "https://github.com/g4rcez/nuclei-vscode"
  },
  "homepage": "https://github.com/g4rcez/nuclei-vscode/blob/main/README.md",
  "bugs": "https://github.com/g4rcez/nuclei-vscode/issues/",
  "license": "MIT",
  "icon": "assets/logo.png",
  "galleryBanner": {
    "color": "#D4DCEC",
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.45.1",
    "node": ">=12.20.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "tags": [
    "nuclei-vscode",
    "Nuclei templates",
    "YAML"
  ],
  "keywords": [
    "YAML",
    "nuclei",
    "templates",
    "project discovery"
  ],
  "activationEvents": [
    "onLanguage:nuclei-vscode"
  ],
  "main": "./dist/extension",
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": "limited",
      "restrictedConfigurations": [
        "nuclei-vscode.customSchemaFile"
      ]
    }
  },
  "contributes": {
    "languages": [
      {
        "id": "nuclei-vscode",
        "configuration": "./language-configuration.json",
        "filenamePatterns": [
          "template.yml",
          "template.yaml"
        ],
        "aliases": [
          "Nuclei Vscode"
        ]
      }
    ],
    "grammars": [
      {
        "language": "nuclei-vscode",
        "scopeName": "source.yaml",
        "path": "./syntaxes/yaml.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[nuclei-vscode]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.quickSuggestions": {
          "other": true,
          "comments": false,
          "strings": true
        },
        "editor.autoIndent": "full"
      }
    }
  },
  "scripts": {
    "schema": "ts-node src/generate-schema.ts",
    "vscode:prepublish": "npm run compile",
    "compile": "npm run schema && webpack --mode production --progress --color",
    "compile:dev": "webpack --mode development --progress --color",
    "watch": "webpack --mode development --progress --color --watch"
  },
  "devDependencies": {
    "@types/fs-extra": "4.0.5",
    "@types/glob": "^7.2.0",
    "@types/node": "^14.16.0",
    "@types/vscode": "^1.45.1",
    "ajv": "^6.9.1",
    "assert": "1.4.1",
    "copy-webpack-plugin": "^10.2.0",
    "glob": "^7.1.6",
    "mocha": "^9.1.1",
    "ts-loader": "^8.0.14",
    "ts-node": "7.0.1",
    "tslint": "5.8.0",
    "typescript": "^4.1.0",
    "webpack": "^5.17.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "azure-pipelines-language-server": "0.6.7",
    "vscode-languageclient": "^7.0.0",
    "vscode-uri": "^3.0.2",
    "zod": "3.12.0",
    "zod-to-json-schema": "3.11.3"
  }
}
